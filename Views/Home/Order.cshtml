            </div>
        </div>
        <br />
        <!-- Item 6 -->
        <div class="item-card">
            <img src="~/images/sqwayi.jpg" width="550" height="450" />
            <div class="item-details">
                <h3 class="item-title">Item 6</h3>
                <p class="item-description">Authentic isiqwayi</p>
                <p class="item-price">R85.00</p>
                <button class="add-to-cart btn btn-primary" data-name="isiqwayi" data-price="85.00">Add to Cart</button>
            </div>
        </div>
    </div>
</div>

<!-- Cart Table -->
<div class="row mt-4">
    <div class="col">
        <h2>Your Cart</h2>
        <table class="cart-table table">
            <thead>
                <tr>
                    <th>Item</th>
                    <th>Price</th>
                    <th>Quantity</th>
                    <th>Total</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody class="cart-items">
                <!-- Cart items will be dynamically populated here -->
            </tbody>
        </table>
        <div>Total price: R<span class="total-cart"></span></div>
    </div>
   
</div>
<button class="clear-cart btn btn-danger">Clear Cart</button>
<script>
    // Add to cart functionality
    $('.add-to-cart').click(function () {
        var name = $(this).data('name');
        var price = $(this).data('price');
        addItemToCart(name, price, 1);
        displayCart();
    });

    // Call displayCart() when the page loads
    $(document).ready(function () {
        displayCart();
    });
</script>
